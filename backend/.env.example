# YugNex Technology - AI Software Development Agency
# Environment Configuration File
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI CONFIGURATION (Primary & Fallback)
# =============================================================================

# Claude API Key (Primary AI Model)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Google AI Studio (For Gemini Flash - EASIEST!)
# Get free key from: https://aistudio.google.com/apikey
GOOGLE_AI_STUDIO_KEY=AIzaSy...

# Google Cloud / Vertex AI (Fallback AI Model - Gemini 2.5 Pro)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GOOGLE_PROJECT_ID=your-project-id
ENABLE_GEMINI_FALLBACK=true
AUTO_SWITCH_ON_RATE_LIMIT=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string (Railway hosted or local)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/yugnex_db

# =============================================================================
# REDIS CONFIGURATION (Caching & Real-time)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================

SECRET_KEY=change_me_to_a_random_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APP CONFIGURATION
# =============================================================================

APP_NAME=YugNex API
APP_VERSION=1.0.0
ENV=development
FRONTEND_URL=http://localhost:5173
